{
  "name": "serial-weight-reader",
  "version": "1.0.0",
  "description": "Serial Port Weight Reader Library - Extract weight data from weighbridge systems",
  "main": "src/index.js",
  "bin": {
    "serial-weight-reader": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "example": "node examples/basic-usage.js",
    "build": "pkg . --out-path dist/",
    "build:win": "pkg . --targets node18-win-x64 --out-path dist/",
    "build:linux": "pkg . --targets node18-linux-x64 --out-path dist/",
    "build:macos": "pkg . --targets node18-macos-x64 --out-path dist/",
    "build:all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path dist/"
  },
  "keywords": [
    "serial",
    "weight",
    "weighbridge",
    "scale",
    "rs232",
    "com",
    "port"
  ],
  "author": "WeighLogger Team",
  "license": "MIT",
  "dependencies": {
    "properties-reader": "^2.3.0",
    "serialport": "^12.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": [
      "config*.properties",
      "examples/**/*",
      "node_modules/@serialport/bindings-cpp/prebuilds/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
